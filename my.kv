<ItemLabel@Label>:
	font_size: '20sp'
	halign: 'left'
	valign: 'middle'
	text_size: self.size

<Container>:

	#do_default_tab: False
    #text_input: text_input
    #first_number: first_number
    #second_number: second_number
    #state_factorization: state_factorization
	#speed_of_learning: speed_of_learning
	#deadline: deadline
	#number_of_iterations: number_of_iterations
	w1: w1
	w2: w2
	#a_value: a_value
	#b_value: b_value
	#c_value: c_value
	#d_value: d_value
	#y_value: y_value
	#roots: roots
    TabbedPanelItem:
        text: 'Lab 3.2'
        GridLayout:
            rows: 7
            BoxLayout:
		        padding: [20, 0, 0, 0]
		        ItemLabel:
		    	    text: 'Input parameters:'

            BoxLayout:
                padding: [10, 0, 0, 0]
                ItemLabel:
                    text: "Speed of learning"
                TextInput:
                    text: '0.001'
                    id: speed_of_learning
                    font_size: '25sp'
                    multiline: False
                    input_type: 'number'
                    input_filter: 'float'

            BoxLayout:
                padding: [10, 0, 0, 0]
                ItemLabel:
                    text: "Deadline (s)"
                TextInput:
                    text: '5'
                    id: deadline
                    font_size: '25sp'
                    multiline: False
                    input_type: 'number'
                    input_filter: 'float'

            BoxLayout:
                padding: [10, 0, 0, 0]
                ItemLabel:
                    text: "Number of iterations"
                TextInput:
                    text: '10000'
                    id: number_of_iterations
                    font_size: '25sp'
                    multiline: False
                    input_type: 'number'
                    input_filter: 'int'

            BoxLayout:
                size_hint: 0.9, 1
                padding: [30, 20, 30, 0]
                Button:
                    text: 'Training'
                    font_size: '25sp'

                    on_release:
                        root.calculate()

            BoxLayout:
                padding: [10, 0, 0, 0]
                ItemLabel:
                    text: 'w1: '
                Label:
                    id: w1
                    font_size: '20sp'
                    text: ''
                    size_hint: 0.5, 1

            BoxLayout:
                padding: [10, 0, 0, 0]
                ItemLabel:
                    text: 'w2: '
                Label:
                    id: w2
                    font_size: '20sp'
                    text: ''
                    size_hint: 0.5, 1
